  <div class="draggable margin table col-lg-2">Table</div>
  <div class="draggable margin station col-lg-2">Waiter Station</div>
  <div class="draggable margin storage col-lg-2">Storage</div>
  <div class="draggable margin pass col-lg-2">Kitchen Pass</div>
  <div class="draggable margin bar col-lg-2">Bar Area</div>
  <div class="draggable margin pos col-lg-2">POS</div>
