<div class="row">
  <div class="droppable col-lg-10">
  </div>
  <div class="col-lg-2 square">
    <h3>Name:</h3>
    <h5><%= @restaurant.name %></h5><br>
    <h3>Address:</h3>
    <%= @restaurant.address %>
  </div>
</div>

<p id="notice"><%= notice %></p>

<button type="button" class="btn btn-default"><%= link_to 'Edit', edit_restaurant_path(@restaurant) %></button>
&nbsp
<button type="button" class="btn btn-default"><%= link_to 'Back', operators_path(@operator) %></button>



<script>
  // retrieve the coordinates saved in the database and render the elements accordingly
  var elements = <%= @restaurant.floorplans.to_json.html_safe %>;
  elements.forEach(function (element) {

  console.log('element.id:', element.id)
    var $elem = $("<div></div>");
      $elem.attr("id", element.id);
      $elem.attr("data-id", element.id);
      $elem.addClass("draggable");
      $elem.wrap("<div class='droppable'></div>")
      $elem.css({
        "position": "absolute",
        "top": element.top,
        "left": element.left,
        "height": element.height,
        "width": element.width,
        "background-color": element.background
      });
      console.log('$elem:', $elem);
      $elem.appendTo(".droppable");

  });
</script>
