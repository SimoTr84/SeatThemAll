
<div class="navbar">
<h2>Login</h2>
</div>

<% if flash[:login_error] %>
  <p>
    <%= flash[:login_error] %>
  </p>
<% end %>

<%= form_tag "/login" do %>
  <p>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>


  <%= submit_tag "Login" %>

<% end %>

<div>
  <h5>Not a S.T.A. Operator Yet? <br><small><a href="/operators/new">Register Now!</a></small></h5>
</div>
